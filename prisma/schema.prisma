generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Airdrop {
  id               Int            @id @default(autoincrement())
  name             String
  creatorId        String
  communityId      String
  airdropAddress   String
  tokenAddress     String
  chainName        String
  chainId          Int
  createdAt        DateTime       @default(now())
  items            AirdropItem[]
  merkleTree       MerkleTree? 

  @@index(fields: [communityId])
}

model AirdropItem {
  address          String
  amount           String
  airdrop          Airdrop        @relation(fields: [airdropId], references: [id], onDelete: Cascade)
  airdropId        Int

  @@id([address, airdropId])
  @@index(fields: [airdropId])
  @@index(fields: [address])
}

model MerkleTree {
  airdrop          Airdrop        @relation(fields: [airdropId], references: [id], onDelete: Cascade)
  airdropId        Int            @id
  data             Json

  @@index(fields: [airdropId])
}

model Vesting {
  address          String
  creatorId        String
  communityId      String
  tokenAddress     String
  contractAddress  String
  chainId          Int
  createdAt        DateTime       @default(now())
  startTime        DateTime
  endTime          DateTime

  @@id([contractAddress, chainId])
  @@index(fields: [address])
  @@index(fields: [communityId])
  @@index(fields: [startTime])
  @@index(fields: [endTime])
}